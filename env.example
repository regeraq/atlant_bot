# Токен бота от @BotFather
# Получить можно здесь: https://t.me/BotFather
BOT_TOKEN=your_bot_token_here

# Путь к базе данных (по умолчанию: bot_database.db)
# В Docker контейнере используйте: /app/data/bot_database.db
DB_PATH=bot_database.db

# ID администраторов (через запятую, без пробелов)
# Получить свой ID можно через @userinfobot в Telegram
ADMIN_IDS=123456789,987654321

# ID контакта для бронирования (опционально)
# Можно настроить через админ-панель
BOOKING_CONTACT_ID=

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Время для ежедневных уведомлений о завершающихся арендах (формат: HH:MM)
NOTIFICATION_TIME=10:00

# ID первого администратора (используется при первом запуске)
FIRST_ADMIN_ID=123456789

